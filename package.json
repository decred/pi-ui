{
  "name": "pi-ui",
  "version": "1.0.0",
  "description": "",
  "author": "tiagoalvesdulce",
  "license": "MIT",
  "repository": "tiagoalvesdulce/pi-ui",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 jest",
    "test:watch": "jest --watch",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "prettify": "prettier --write 'src/**/*.{js,css,json}'",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "docz:deploy": "gh-pages -d .docz/dist",
    "lint": "npm-run-all --parallel lint:*",
    "lint:css": "stylelint --fix 'src/**/*.css'",
    "lint:js": "eslint --fix --ext=.js,.jsx src",
    "husky:pre-commit": "npm-run-all --sequential prettify lint test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx}": [
      "npm run prettify",
      "npm run lint:js",
      "npm run test",
      "git add"
    ],
    "./src/**/*.css": [
      "npm run prettify",
      "npm run lint:css",
      "git add"
    ]
  },
  "peerDependencies": {
    "prop-types": "^15.5.4",
    "react": "^15.0.0 || ^16.0.0",
    "react-dom": "^15.0.0 || ^16.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-react": "^7.0.0",
    "@svgr/rollup": "^2.4.1",
    "babel-eslint": "^9.0.0",
    "babel-jest": "24.7.1",
    "babel-loader": "^8.0.5",
    "cross-env": "^5.1.4",
    "deepmerge": "^3.2.0",
    "docz": "^1.0.0-rc.3",
    "docz-plugin-css": "^0.11.0",
    "docz-theme-default": "^1.0.0-rc.3",
    "eslint": "5.12.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-config-standard-react": "^7.0.2",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.0",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-standard": "^4.0.0",
    "gh-pages": "^1.2.0",
    "husky": "^1.3.1",
    "identity-obj-proxy": "^3.0.0",
    "jest": "24.7.1",
    "lint-staged": "^8.1.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-test-renderer": "^16.8.4",
    "rollup": "^0.64.1",
    "rollup-plugin-babel": "^4.0.1",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-postcss": "2.0.3",
    "rollup-plugin-url": "^1.4.0",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "webpack": "4.28.3"
  },
  "files": [
    "dist"
  ],
  "dependencies": {}
}
